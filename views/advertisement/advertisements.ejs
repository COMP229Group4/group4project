<%- include ../partials/header.ejs %>

<%- include ../partials/navbar.ejs %>
            
<main role="main">
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading my-4 page-title">Advertisements <a href="/advertisement/add" class="btn"><i class="bi bi-file-plus fa-3x icon-blue"></i></a></h1>
        </div>
    </section>

    <div class="album">
        <div class="container">
            <div class="row">
                <% for(let i = 0; i < AdvertisementList.length; i++) { %>
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-header"><i><%= AdvertisementList[i].Brand %></i> <%= AdvertisementList[i].ProductName %></div>
                        <img class="card-img-top" src="<%= AdvertisementList[i].Imagelink %>">
                        <div class="card-body">
                            <p class="card-text">
                                <%= AdvertisementList[i].Description %>
                                <br><br>
                                Price: $<%= AdvertisementList[i].Price %>
                                <br><br>
                                Condition: <%= AdvertisementList[i].Condition %>
                            </p>
                        </div>
                        <div class="card-footer text-muted">
                            <div class="d-flex align-items-center btn-group">
                                <a href="/advertisement/edit/<%= AdvertisementList[i]._id %>" class="btn btn-sm">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a href="/advertisement/delete/<%= AdvertisementList[i]._id %>" class="btn btn-sm">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<%- include ../partials/Footer.ejs %>