<%- include ../partials/header %>
<%- include ../partials/navbar %>

<!-- Content for the Details page -->
<div class="container">
        <div class="row mx-5">
            <h1 class="page-title my-4 text-center"><%= title %></h1>
            <div class="col-md-5">
                <img class="" style="width: 60%;" src="<%= Advertisement.ImageLink %>">
            </div>

            <div class="col-md-7">
                <table class="table table-striped table-hover">

                    <tr>
                        <td>Product Name</td>
                        <td><%= Advertisement.ProductName %></td>
                    </tr>
                    <tr>
                        <td>Brand</td>
                        <td><%= Advertisement.Brand %></td>
                    </tr>
                    <tr>
                        <td>Description</td>
                        <td><%= Advertisement.Description %></td>
                    </tr>
                    <tr>
                        <td>Price</td>
                        <td><%= Advertisement.Price %></td>
                    </tr>
                    <tr>
                        <td>Category</td>
                        <td><%= Advertisement.Category %></td>
                    </tr>
                    <tr>
                        <td>Condition</td>
                        <td><%= Advertisement.Condition %></td>
                    </tr>
                    <tr>
                        <td>Advertisement Start Date</td>
                        <td><%= Advertisement.DateEnabled.toISOString().split('T')[0] %></td>
                    </tr>
                    <tr>
                        <td>Advertisement Expiry Date</td>
                        <td><%= Advertisement.Lifetime.toISOString().split('T')[0] %></td>
                    </tr>
                </table>
            </div>
        </div>

        
        <section class="questionsAndAnswers">
            <div class="text-center my-3">
                <h1 class="page-title my-4 text-center">Have a question?</h1>
                <a href="/question/add/<%= Advertisement._id %>"><button type="button" class="btn btn-light">Ask!</button></a>
                <a href="/advertisement/list" class="btn btn-light">
                    <i class="fas fa-undo"></i> 
                    Back
                </a>
            </div>
            
            <div class="row">
                <% for(let i = 0; i < Questions.length; i++) { %>
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-header text-center h5"><b><%= Questions[i].Question %></b></div>
                        <% if (Questions[i].Answer) { %>
                            <div class="card-body">
                                <p class="card-text">
                                    <%= Questions[i].Answer %>
                                </p>
                            </div>
                        <% } %>
                        <div class="card-footer text-muted">
                            <div class="d-flex align-items-center btn-group">
                                <a href="/question/edit/<%= Questions[i]._id %>/<%= Advertisement._id %>" class="btn btn-sm">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a href="/question/delete/<%= Questions[i]._id %>/<%= Advertisement._id %>" class="btn btn-sm">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </section>

        
</div>

<%- include ../partials/footer %>