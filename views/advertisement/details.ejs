<%- include ../partials/header %>
<%- include ../partials/navbar %>

<!-- Content for the Details page -->
<div class="container">
        <div class="row mx-5">
            <h1 class="page-title my-4 text-center"><%= title %></h1>
            <div class="col-md-5">
                <img class="" style="width: 60%;" src="<%= advertisement.ImageLink %>">
            </div>
            
            <div class="col-md-7">
                <table class="table table-striped table-hover">

                    <tr>
                        <td>Product Name</td>
                        <td><%= advertisement.ProductName %></td>
                    </tr>
                    <tr>
                        <td>Brand</td>
                        <td><%= advertisement.Brand %></td>
                    </tr>
                    <tr>
                        <td>Description</td>
                        <td><%= advertisement.Description %></td>
                    </tr>
                    <tr>
                        <td>Price</td>
                        <td><%= advertisement.Price %></td>
                    </tr>
                    <tr>
                        <td>Category</td>
                        <td><%= advertisement.Category %></td>
                    </tr>
                    <tr>
                        <td>Condition</td>
                        <td><%= advertisement.Condition %></td>
                    </tr>
                    <tr>
                        <td>Advertisement Start Date</td>
                        <td><%= advertisement.DateEnabled.toISOString().split('T')[0] %></td>
                    </tr>
                    <tr>
                        <td>Advertisement Expiry Date</td>
                        <td><%= advertisement.Lifetime.toISOString().split('T')[0] %></td>
                    </tr>
                </table>
                
                <a href="/advertisement/list" class="btn btn-light">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>
                <section class="questionsAndAnswers">
                    <div>
                        <h1>Have a question?</h1>
                        <button type="button" class="btn btn-primary"><a href="/question/add" style="color: aliceblue;">Ask!</a></button>
                    </div>
                    <table class="table table-striped table-hover">
                        <tr>
                            <th>Question</th>
                            <th>Answer</th>
                          <tr>
                            <% for(let i = 0; i < QuestionModel.length; i++) { %>
                            <td><%= QuestionModel[i].Question %></td>
                            <td><%= QuestionModel[i].Answer %></td>
                          </tr>
                            <% } %>
                    </table>
                </section>
            </div>
        </div>
</div>

<%- include ../partials/footer %>