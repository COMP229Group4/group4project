<meta http-equiv="refresh" content="30">
<div class="height d-flex justify-content-center align-items-center">
    <link rel="stylesheet" href="../stylesheets/list.css" />
    <div class="card p-3">

        <div class="d-flex justify-content-between align-items-center ">
            <br>
            <div>
                <a href="views\views\advertisement\add_edit.ejs" class="btn btn-primary align-self-end" role="button">

                    <link rel="preconnect" href="https://fonts.gstatic.com">
                    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

                    <button>Add a new Product</button>
                </a>

            </div>
            <br>
            <div class="mt-2">
                <h4 class="text-uppercase">Product List</h4>
                <div class="mt-5">
                    <% for(let i = 0; i < AdvertisementList.length; i++) { %>
                        <h5 class="text-uppercase mb-0">
                            <%= AdvertisementList[i].Brand %>
                        </h5>
                        <h1 class="main-heading mt-0">
                            <%= AdvertisementList[i].ProductName %>
                        </h1>
                        <div class="d-flex flex-row user-ratings">
                            <div class="ratings">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <h6 class="text-muted ml-1">
                                $
                                <%= AdvertisementList[i].Price %>
                            </h6>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-2 mb-2">
                            <span>Category:
                                <%= AdvertisementList[i].Category %></span>
                            <br><span>Condition:
                                <%= AdvertisementList[i].Condition %></span>
                            <!-- <br><span>Expiry Date:
                                <%= AdvertisementList[i].lifetime %></span> -->


                        </div>
                        <button class="btn btn-danger">Add to cart</button>
                        <br>
                        <a href="/advertisement/add_edit/<%= AdvertisementList[i]._id %>" class="btn btn-danger">
                            <i class="btn btn-danger"></i>Edit</a>

                        <a href="/advertisement/delete/<%= AdvertisementList[i]._id %>" class="btn btn-danger">
                            <i class="btn btn-danger"></i>Delete</a>
                        </td>
                        <% } %>
                </div>
            </div>
            <!-- <div class="image">
                <img src="https://i.imgur.com/MGorDUi.png" width="200">
            </div> -->
        </div>


    </div>

</div>